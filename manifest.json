{
  "manifest_version": 2,

  "name": "Citrix 2-Factor Helper",
  "description": "This extension helps fill in your individual 2 factor authentication password for Citrix",
  "version": "1.0",

  "page_action": {
    "default_title": "Citrix2Factor Engaged!",
    "default_icon": "icon.png"
  },
  
  "options_ui": {
    // Required.
    "page": "options.html",
    // Recommended.
    "chrome_style": true
  },

  "background": {
    "scripts": ["challenge.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://citrix2.alldata.net/Citrix/XenAppCol/auth/challenge.aspx"],
      "js": ["challenge.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "https://ajax.googleapis.com/"
  ]
}